<script async src="https://www.googletagmanager.com/gtag/js?id=UA-90475221-1"></script>
<script>
  window.dataLayer = window.dataLayer || [];

  function gtag() {
    dataLayer.push(arguments);
  }

  gtag('js', new Date());
  gtag('config', 'UA-90475221-1');
</script>
</body>
</html>