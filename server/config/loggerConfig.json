{
  "appenders": {
    "department": {
      "type": "file",
      "filename": "logs/department.log"
    },
    "notification": {
      "type": "file",
      "filename": "logs/notification.log"
    },
    "console": {
      "type": "console"
    }
  },
  "categories": {
    "default": {
      "appenders": ["console"],
      "level": "all"
    },
    "department": {
      "appenders": ["department", "console"],
      "level": "all"
    },
    "notification": {
      "appenders": ["notification", "console"],
      "level": "all"
    }
  }
}
